<Application x:Class="_02_Assignment.CMS22.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:_02_Assignment.CMS22.WPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <!--vi styler om TextBox och TextBlock och sedan gör vi en bindning i front enden-->

        <Style x:Key="label" TargetType="TextBlock">
            <Setter Property="Margin" Value="0 0 0 3" />
        </Style>


        <Style x:Key="input" TargetType="TextBox">
            <Setter Property="Padding" Value="5" />
            <Setter Property="Margin" Value="0 0 0 7" />
            <Setter Property="Background" Value="#f0f5f1" />
        </Style>



        <!--Styler om knappar och sedan gör vi en bindning i front enden-->

        <Style x:Key="btn_Add" TargetType="Button">
            <Setter Property="Background" Value="#BEE8F2" />
            <Setter Property="Margin" Value="15" />
            <Setter Property="Padding" Value="30 7" />
        </Style>

        <Style x:Key="btn_Update" TargetType="Button">
            <Setter Property="Background" Value="#0ceb52" />
            <Setter Property="Margin" Value="15" />
            <Setter Property="Padding" Value="30 7" />
        </Style>


    </Application.Resources>
</Application>
